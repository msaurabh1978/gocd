<div id="ssh_passphrase_div" class="form_item_block">
    <label>SSH Passphrase</label>
    <%= scope[:form].hidden_field(com.thoughtworks.go.config.materials.git.GitMaterialConfig::ENCRYPTED_SSH_PASSPHRASE, {:class => "form_input encrypted_password"}) -%>
    <%= password_field_tag("material[sshPassphrase]", '', {:class => "form_input password", :disabled => true}) -%>
    <%= error_message_on(scope[:form].object, com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE, :css_class => "form_error") %>
    <div class="checkbox_row">
        <%= check_box_tag("material[#{com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE_CHANGED}]", "1", false, :class => "password_changed") %>
        <label class="condition" for="material_<%= com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE_CHANGED -%>">Change Passphrase</label>
    </div>
</div>

 <script type="text/javascript">
     var checkBox = jQuery("#material_<%= com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE_CHANGED -%>");
     var passphraseField = jQuery("#material_<%=com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE -%>");
        Util.on_load(function() {
            Util.bindPasswordField(checkBox, passphraseField);
        });
 </script>
