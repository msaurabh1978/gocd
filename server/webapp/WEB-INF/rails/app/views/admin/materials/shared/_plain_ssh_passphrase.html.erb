<%
   scope[:password_class] ||= 'password'
%>
<div id="ssh_plain_passphrase_div" class="form_item_block">
    <label>SSH Passphrase</label>
    <%= scope[:form].hidden_field(com.thoughtworks.go.config.materials.git.GitMaterialConfig::ENCRYPTED_SSH_PASSPHRASE, {:class => "form_input encrypted_password"}) -%>
    <%= scope[:form].password_field(com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE, {:class => "form_input #{scope[:password_class]}", :autocomplete => "off" }) -%>
    <%= error_message_on(scope[:form].object, com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE, :css_class => "form_error") %>

    <div class="hidden">
        <%= scope[:form].check_box(com.thoughtworks.go.config.materials.git.GitMaterialConfig::SSH_PASSPHRASE_CHANGED, {:class => "form_input password_changed", :value => "1", :checked => true, :include_hidden => false}) -%>
    </div>
</div>
